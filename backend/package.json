{
  "name": "app",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "migration:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "migration:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:start": "docker compose -f src/db/docker-compose.yaml --env-file .env up -d",
    "db:stop": "docker compose -f src/db/docker-compose.yaml  --env-file .env down"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "elysia": "latest",
    "pg": "^8.16.3",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "type": "module",
  "module": "src/index.js"
}